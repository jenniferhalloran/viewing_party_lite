<center>


<% if params[:q]%>
    <h2> Top Rated Movies </h2>
    <%= render partial: 'discover_button' %>
    <% @top_movies.each do |movie|%>
        <div id="top-movie-<%= movie.id %>">
            <p> <%= movie.title %> <b> Vote Average: </b> <%=movie.vote_average %>
        </div>
    <% end %>
<%else %>
    <h2> Movie results for: <%=params[:search]%> </h2>
    <%= render partial: 'discover_button' %>
    <% @movie_search_results.each do |movie|%>
        <div id="searched-movie-<%= movie.id %>">
            <p> <%= movie.title %> <b> Vote Average: </b> <%=movie.vote_average %>
        </div>
    <% end %>
<% end %>
</center>