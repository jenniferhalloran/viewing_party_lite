<center>
    <h2> Discover Movies </h2>
    <%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies", method: :get, params: {q: 'top rated'} %>
<br>
<p> OR </p>
    <%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
    <%= form.text_field :search, placeholder: "Search by Movie Title" %>
    <%= form.submit "Find Movies" %>
    <% end %>
   
</center>