<%= form_with url: login_path, method: :post, local: true do |f| %>
  <%= f.label "Name:" %><br>
  <%= f.text_field :name %><br>
  <%= f.label "Email:" %><br>
  <%= f.password_field :email %><br><br>
  <%= f.label "Password:" %><br>
  <%= f.password_field :password %><br><br>
  <%= f.submit 'Log In' %>
<% end %>